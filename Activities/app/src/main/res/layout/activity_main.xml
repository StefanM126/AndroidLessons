<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3pt"
    android:layout_marginRight="3pt"
    android:layout_marginBottom="3pt"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="EditText" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textview"
            android:textColor="@color/TextVievColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1">

        <Button
            android:id="@+id/dugme1"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_1" />

        <Button
            android:id="@+id/dugme2"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1">

        <Button
            android:id="@+id/dugme3"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_3" />

        <Button
            android:id="@+id/dugme4"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1">

        <Button
            android:id="@+id/dugme5"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1">


        <Button
            android:id="@+id/dugme6"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dugme_6" />
    </LinearLayout>
</LinearLayout>